{% extends 'base.html.twig' %}

{% block title "S'authentifier" %}

{% block body %}
<div class="container mt-5 vh-100">
   <div class="row justify-content-center align-items-center">
      <div class="col-lg-6 col-sm-12">
         <div class="form-login border px-4 py-5">
            <h1 class="display-6 text-center mb-5">Connexion</h1>
            <form 
               action="{{ path('account_login') }}"
               method="POST"
            >
               {% if error %}
                  <div class="alert alert-danger alert-dismissible fade show" role="alert">
                     Une erreur est survenue !<br>
                     Le nom d'utilisateur ou bien le mot de passe est incorret
                     <button 
                        type="button" 
                        class="btn-close" 
                        data-mdb-dismiss="alert" 
                        aria-label="Close">
                     </button>
                  </div>
               {% endif %}
               {# Username #}
               <div class="form-outline mb-4">
                  <input 
                     type="email" 
                     name="_username" 
                     id="username" 
                     class="form-control"
                     value="{{ lastUsername }}"
                     placeholder="Votre email"
                     required>
                  <label 
                     for="username" 
                     class="form-label">
                     Nom d'utilisateur
                  </label>
               </div>
   
               {# Password #}
               <div class="form-outline mb-4">
                  <input 
                     type="password" 
                     name="_password"
                     id="password" 
                     class="form-control"
                     placeholder="Votre mot de passe"
                     required>
                  <i class="fa fa-eye toggle-password" data-toggle="#password"></i>
                  <label
                     for="password" 
                     class="form-label">
                     Mot de passe
                  </label>
               </div>

               <!-- Remember me button and forgot password-->
               <div class="row mb-4">
                  <!-- Remember me button -->
                  <div class="col d-flex justify-content-center">
                     <div class="form-check">
                        <input
                           class="form-check-input mr-2"
                           type="checkbox"
                           value=""
                           id="form2Example3"
                           checked
                        />
                        <label 
                           class="form-check-label" 
                           for="form2Example3">
                           Se souvenir de moi
                        </label>
                     </div>
                  </div>
                  <!-- forgot password -->
                  <div class="col">
                     <a href="#!">Mot de passe oubli√©</a>
                  </div>
               </div>

               {# Submit Button #}
               <button class="btn btn-primary w-100 mb-4">
                  <i class="fas fa-sign-in-alt mr-2"></i>
                  S'authentifier
               </button>
               
               <p class="text-center mb-4">
                  Vous n'avez pas de compte ?
                  <a href="#!">S'inscrire</a>
               </p>
            </form>
         </div>
      </div>
   </div>
</div>
{% endblock %}